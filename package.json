{
  "name": "ltmo",
  "version": "0.10.0",
  "description": "Un sitio para los amigos.",
  "main": "cloth/js/main.js",
  "directories": {
    "doc": "docs",
    "src": "cloth/js"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tutuca/ltmo.git"
  },
  "scripts": {
    "build-sass": "node-sass cloth/style.scss static/main.css -I node_modules",
    "watch-js": "nodemon -e js -w cloth/js -x 'npm run build-js'",
